{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "allowJs": true,
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": false,
    "newLine": "LF",
    "preserveConstEnums": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "outDir": "./build",
    "types": ["node"],
    //"types": ["node", "jest"],
    "strict": true
  },
  "exclude": [
    "**/__mocks__/*", 
    "../../node_modules", 
    "build", 
    "tests"
  ]
}
